{
  "name": "next-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "eslint",
    "test": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes jest",
    "test:watch": "jest --watch",
    "test:unit": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes jest --config jest.frontend.config.js",
    "test:api": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes jest --config jest.api.config.js",
    "test:coverage": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes jest --coverage",
    "test:integration": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes jest --config jest.integration.config.js",
    "test:e2e": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:smoke": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes playwright test smoke.e2e.spec.ts",
    "test:e2e:critical": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes playwright test critical-flows.e2e.spec.ts",
    "test:e2e:cross-browser": "CROSS_BROWSER=true PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes playwright test",
    "test:all": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes npm run test && npm run test:e2e",
    "test:combined": "PRISMA_USER_CONSENT_FOR_DANGEROUS_AI_ACTION=yes npm run test:unit && npm run test:api",
    "db:seed": "tsx prisma/seed.ts"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0",
    "next": "15.5.2",
    "prisma": "^6.15.0",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/supertest": "^6.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "jest-extended": "^6.0.0",
    "@playwright/test": "^1.51.1",
    "supertest": "^7.1.4",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.4",
    "tsx": "^4.20.5",
    "typescript": "^5"
  }
}
